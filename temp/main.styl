.w200
  font-weight 200
.w300
  font-weight 300
.w400
  font-weight 400
.w500
  font-weight 500
.w600
  font-weight 600
.w700
  font-weight 700
// styles
*
  margin 0
  padding 0
  box-sizing border-box
  user-select none
  hyphens auto
  // overflow-x hidden
*:focus
  outline none
*::-webkit-scrollbar
  display none
::selection
  background alpha($txt,0.2) 
  // border-radius 2px
body
  background $bg
  // padding 10px
  width 100vw
  margin 0 auto
#container
  // max-width 1000px
  margin 0 auto
#header
  width 100vw
  background linear-gradient(180deg, alpha($bg, 1.0) 0%, alpha($bg, 0.0) 100%)
  z-index 2
  position fixed
  left 0
  top 0
  height 45px
#headitems
  z-index 3
  padding 10px
  width 100vw
  margin 0 auto
  display grid
  grid-template-columns 300px 1fr 100px
  grid-gap 10px
.right2
  text-align right
.columns
  columns 300px 4
.vcenter
  position absolute
  width 100vw
  top 50%
  transform translateY(-50%)
#buybutton, #about
  z-index 5
  position fixed
  padding 7px 6px 2px
  border-radius 4px
  background $bg
  box-shadow 0 2px 4px alpha($txt,0.5)
#buybutton
  right 10px
  bottom 10px
#buybutton h3
  animation pulse 0.75s ease infinite
#about
  // visibility none
  // text-align right
  width 250px
  top 45px
  right 10px
#speechbubble
  position fixed
  bottom 100px
  border 2px solid $txt
  border-radius 8px
  padding 10px 10px 2px
  background $bg
#speechbubble:before
  content ""
  width 0px
  height 0px
  position absolute
  border-left 10px solid $txt
  border-right 10px solid transparent
  border-top 10px solid $txt
  border-bottom 10px solid transparent
  left 130px
  bottom -20px
#speechbubble:after
  content ""
  width 0px
  height 0px
  position absolute
  border-left 8px solid $bg
  border-right 8px solid transparent
  border-top 8px solid $bg
  border-bottom 8px solid transparent
  left 132px
  bottom -15px
#bottomleft
  position fixed
  padding-top 50px
  left 10px
  bottom 7px
  // height 100vw
  width 50vw
  float left
#bottomright
  position fixed
  padding-top 50px
  right 10px
  bottom 7px
  width 50vw
  text-align right
#fullpage, #grid
  padding 10px
  z-index 1
  margin-top 45px
  width 100vw
  display grid
  grid-gap 10px
#fullpage
  grid-template-columns 1fr
#grid
  grid-template-columns 300px 1fr
  padding-bottom 40px
#grid .left
  // text-align justify
  // hyphens auto
.top
  grid-column 1 / span 2
#features
  width 285px
  display grid
  grid-template-columns 1fr 1fr
  grid-gap 20px
#featurewide
  
#feature p
  margin-bottom 3px
#feature table
  transform translateX(-9px)
  width 100%
  border-collapse collapse
  margin-bottom -5px
#feature th, #feature td
  width 45px
  text-align center
.textbg
  line-height 0.81
  padding 5px 7px 0px 7px
  border-radius 5px
  color $bg
  background $txt
a
  // transition color 0.2s ease
  color alpha($txt,1)
  text-decoration none
  cursor pointer
@keyframes blink
  0%, 100%
    opacity 1
  50%
    opacity 0
@keyframes pulse 
  0%, 100%
    opacity 1
  50%
    opacity 0.5
a.rarr:hover, a.nearr:hover
  color alpha($txt,1)
a.rarr:hover::after, a.nearr:hover::after
  animation blink 0.25s step-end infinite
a.rarr::after
  content "→"
a.nearr::after
  content "↗"
#headitems a:hover, a#bigrat:hover
  // color alpha($txt,0.5)
  background none
a:hover
  // transition color 0.2s ease
  // color alpha($txt,0.5)
  background alpha($txt,0.2)
  border-radius 4px
a#bigrat
  // font 500 40vmin/0.9 font-sans
  // letter-spacing -0.2vmin
  // font 500 12vmin/0.9 font-sans
  // letter-spacing -0.1vmin
  font 500 80px/1.0 font-sans
  color $txt
  // text-align center
  transform translateX()
a#bigrat::after
  content ""
a#bigrat:hover::after
  content ""
h1
  font 500 100px/0.9 font-sans
  letter-spacing -.5px
  // word-spacing 0.1vmin
  color $txt
  transform translateX(-0.2vmin)
  margin-bottom 10px
h2
  font 500 40px/1.0 font-sans
  color $txt
  transform translateX(-1.2px)
  margin-bottom 10px
h3
  font 500 25px/1.0 font-sans
  color $txt
  transform translateX(-0.3px)
  margin-bottom 10px
p
  font 400 12px/1.2 font-sans
  letter-spacing 0.3px
  color $txt
  margin-bottom 10px
.trow
  display grid 
  grid-template-columns 120px 1fr
#slider1, #slider2, #slider3,
#slider4, #slider5, #slider6,
#slider7
  transform translateY(6px)
  border-radius 2px
  -webkit-appearance none
  appearance none
  width 150px
  height 2px
  background alpha($txt,0.2)
  margin-bottom 10px
#slider1::-webkit-slider-thumb,
#slider2::-webkit-slider-thumb,
#slider3::-webkit-slider-thumb,
#slider4::-webkit-slider-thumb,
#slider5::-webkit-slider-thumb,
#slider6::-webkit-slider-thumb,
#slider7::-webkit-slider-thumb
  -webkit-appearance none
  appearance none
  border-radius 30%
  width 8px
  height 8px
  background $txt
  cursor pointer
  border none
#slider1:hover::-webkit-slider-thumb,
#slider2:hover::-webkit-slider-thumb,
#slider3:hover::-webkit-slider-thumb,
#slider4:hover::-webkit-slider-thumb,
#slider5:hover::-webkit-slider-thumb,
#slider6:hover::-webkit-slider-thumb,
#slider7:hover::-webkit-slider-thumb
  -webkit-appearance none
  appearance none
  border-radius 30%
  width 12px
  height 12px
  background $txt
  cursor pointer border none
#slider1::-moz-range-thumb,
#slider2::-moz-range-thumb,
#slider3::-moz-range-thumb,
#slider4::-moz-range-thumb,
#slider5::-moz-range-thumb,
#slider6::-moz-range-thumb,
#slider7::-moz-range-thumb
  -webkit-appearance none
  appearance none
  border-radius 30%
  width 8px
  height 8px
  background $txt
  cursor pointer
  border none
#slider1:hover::-moz-range-thumb,
#slider2:hover::-moz-range-thumb,
#slider3:hover::-moz-range-thumb,
#slider4:hover::-moz-range-thumb,
#slider5:hover::-moz-range-thumb,
#slider6:hover::-moz-range-thumb,
#slider7:hover::-moz-range-thumb
  -webkit-appearance none
  appearance none
  border-radius 30%
  width 12px
  height 12px
  background $txt
  cursor pointer
  border none
#tester1:active, #tester1:hover,
#tester2:active, #tester2:hover,
#tester3:active, #tester3:hover,
#tester4:active, #tester4:hover,
#tester5:active, #tester5:hover,
#tester6:active, #tester6:hover,
#tester7:active, #tester7:hover
  background alpha($txt,0.2)
  border-radius 4px
.box
  position fixed
  background $txt
  width 30px
  height 15px
.box#b1
  bottom 0
  left 10px
.box#b2
  bottom 0
  right 10px
@media (max-width: 700px)
  #headitems
    grid-template-columns 1fr 1fr 1fr
  #headitems .right
    text-align center
  #grid
    grid-template-columns 1fr
  #features
    // width 100%
  p
    font-size 14px
  h1
    // font-size 50px
  #bottomright p:first-of-type
    margin-bottom 0
  #bottomright div
    display none
  #speechbubble span
    display none